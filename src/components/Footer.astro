---
import {
  socialLinks,
  author
} from '../config/site.ts';

const year = new Date().getFullYear();
---

<footer class="mt-16 border-t border-muted py-6 text-sm text-muted text-center">
  <div class="flex flex-wrap justify-center items-center gap-x-2 gap-y-1">
    <span>© {year} {author}</span>
    <span aria-hidden="true">•</span>
    <a href={socialLinks.email} class="hover:underline text-primary">Email</a>
    <span aria-hidden="true">•</span>
    <a href={socialLinks.linkedin} target="_blank" rel="noopener noreferrer" data-goatcounter-click="linkedin-profile" class="hover:underline text-primary">LinkedIn</a>
    <span aria-hidden="true">•</span>
    <a href={socialLinks.github} target="_blank" rel="noopener noreferrer" data-goatcounter-click="github-profile" class="hover:underline text-primary">GitHub</a>
  </div>
</footer>
