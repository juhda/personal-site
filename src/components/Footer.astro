---
import Link from './Link';

import {
  socialLinks,
  author
} from '../config/site.ts';

const year = new Date().getFullYear();
---

<footer class="muted-note muted-top-rule mt-16 py-6">
  <div class="flex flex-wrap justify-center items-center gap-x-2 gap-y-1">
    <span>© {year} {author}</span>
    <span aria-hidden="true">•</span>
    <Link href={socialLinks.email} class="hover:underline text-primary">Email</Link>
    <span aria-hidden="true">•</span>
    <Link href={socialLinks.linkedin} class="hover:underline text-primary">LinkedIn</Link>
    <span aria-hidden="true">•</span>
    <Link href={socialLinks.github} class="hover:underline text-primary">GitHub</Link>
  </div>
</footer>
