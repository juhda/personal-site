---
import BaseLayout from '../layouts/BaseLayout.astro';
import {
  author,
  jobTitle,
  socialLinks,
  cleanJobTitle
} from '../config/site.ts';

const title = "Project Portfolio | " + author + " - " + jobTitle;
const description = "Explore selected projects by " + author + ", a " + cleanJobTitle +" specializing in embedded software, toolchains, and runtime systems. Browse work in developer tooling, system simulation, firmware development, and hardware-software co-design.";
const keywords = author + ", compiler development, developer tooling, toolchain engineering, systems engineering, system simulation, runtime systems, embedded software, firmware development, RISC-V, performance engineering, projects, engineering portfolio";
const localImage = "/og/portfolio.png";
---

<BaseLayout
  noPadding={true}
  title={title}
  description={description}
  keywords={keywords}
  localImage={localImage}
>
  <section class="max-w-3xl sm:max-w-4xl mx-auto flex flex-col items-start gap-10 py-16 mt-4 px-6 bg-surface rounded-xl shadow-md">
    <div>
      <h1>Project Portfolio</h1>

      <p>
        Welcome to the project portfolio of <strong><span class="whitespace-nowrap">{author}</span></strong>, {cleanJobTitle}. I specialize in low-level software, code generation, toolchains, runtime systems, and hardware-software co-design. This page showcases selected projects I've led or contributed to â€” spanning system architecture, embedded platforms, developer tooling, and AI acceleration.
      </p>

      <p>
        Each portfolio entry includes:
      </p>

      <ul class="list-disc pl-6">
        <li>A brief overview of the project scope</li>
        <li>My role and technical contributions</li>
        <li>Tools, languages, and technologies used</li>
        <li>Delivered results and impact (e.g., platform enablement, improved workflows, or validation support)</li>
      </ul>

      <p>
        You can explore entries by domain, contribution type, or leadership role using the predefined views. For a complete overview, see the full <strong>Portfolio Table</strong>.
      </p>

      <p>
        To learn more about my background, visit my <a href="/about">About</a> page.
        <br />Feel free to <a href={socialLinks.email}>email me</a> or connect on <a href={socialLinks.linkedin} target="_blank" rel="noopener noreferrer" data-goatcounter-click="linkedin-profile">LinkedIn</a>.
      </p>
    </div>
  </section>

  <!-- Portfolio Table Embed -->
  <div class="relative w-full min-h-[80vh] px-6 mt-12 pt-2 border-t border-muted">
    <iframe
      src="https://juhaszdavid.notion.site/ebd/1d07a2153eff8022ab18e7c4208be2d9?v=1d67a2153eff80c7bf68000c92ee9408"
      title={title}
      class="block w-full min-h-[80vh] border-0"
      loading="eager"
      allowfullscreen
    / >
  </div>
</BaseLayout>
