---
import BaseLayout from '../layouts/BaseLayout.astro';
import Link from '../components/Link';

import {
  author,
  jobTitle,
  socialLinks,
  cleanJobTitle
} from '../config/site.ts';

const title = "Project Portfolio | " + author + " - " + jobTitle;
const description = "Explore selected projects by " + author + ", a " + cleanJobTitle + " specializing in edge AI, embedded systems, and firmware development. Browse work in low-power solutions, runtime systems, and hardware-software co-design.";
const keywords = author + ", edge AI engineer, embedded systems engineer, firmware development, developer tooling, runtime systems, RISC-V, low-power computing, sustainable edge solutions, projects, engineering portfolio";
const localImage = "/og/portfolio.png";
---
<BaseLayout
  noPadding={true}
  title={title}
  description={description}
  keywords={keywords}
  localImage={localImage}
>
  <section class="card">
    <div>
      <h1>Project Portfolio</h1>

      <p>
        Welcome to the project portfolio of <strong><span class="whitespace-nowrap">{author}</span></strong>, an <em>{cleanJobTitle}</em>. I specialize in <em>firmware, developer tools, runtime systems, and hardware-software co-design</em>, with a focus on <em>low-power, sustainable edge solutions</em>. This page showcases selected projects I've led or contributed toâ€”spanning <em>system architecture, embedded platforms, edge AI, and developer tooling</em>.
      </p>

      <p>
        Each portfolio entry includes:
      </p>

      <ul class="list-disc pl-6">
        <li>A brief overview of the project scope</li>
        <li>My role and technical contributions</li>
        <li>Tools, languages, and technologies used</li>
        <li>Delivered results and impact (e.g., platform enablement, improved workflows, or validation support)</li>
      </ul>

      <p>
        You can explore entries by <em>domain, contribution type, or leadership role</em> using the predefined views. For a complete overview, see the full <em>Portfolio Table</em>.
      </p>

      <p>
        To learn more about my background, visit my <Link href="/about">About page</Link>.
        <br />For insights into <em>edge AI, embedded systems, and developer tooling</em>, check out my <Link href="/blog">blog</Link>.
        <br />Feel free to <Link href={socialLinks.email}>email me</Link> or <Link href={socialLinks.linkedin}>connect on LinkedIn</Link>.
      </p>
    </div>
  </section>

  <!-- Portfolio Table Embed -->
  <div class="wide-embed">
    <iframe
      src="https://juhaszdavid.notion.site/ebd/1d07a2153eff8022ab18e7c4208be2d9?v=1d67a2153eff80c7bf68000c92ee9408"
      title={title}
      loading="eager"
      allowfullscreen
    ></iframe>
  </div>
</BaseLayout>
